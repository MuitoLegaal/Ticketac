<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Ticketac</title>
    <!-- To add in order to scale the view for mobiles -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

      <div class="home">

        <div class="row">

          <div class='header d-flex align-items-center col-12'>

  
            <img class ='train mx-2' src='/images/train.png' width="50px">
            <h2 class='mx-2'>Ticketac</h2>

            <div class='d-flex justify-content-end col-xs-6 col-12'>
              <span class="mx-3">Connection<span>
              <span class="mx-3">My last trips</span>
            </div>

          </div>

          <!-- SIGN UP AREA -->
          
          <div class="d-flex justify-content-xs-center justify-content-md-end col-12 col-sm-6 text-center mt-5">

            <div class="formArea col-xs-12 col-md-4">

              <h4 class="titleForm">Sign-in :</h4>

              <form action="/sign-in" method="POST">
                <div class="form-group">
                  <input name="email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email">
                </div>
                <div class="form-group">
                  <input name="password" type="password" class="form-control" placeholder="Password">
                </div>

                <button type="submit" class="btn btn-danger">Confirm</button>
              </form>

            </div>

          </div>

          <!-- SIGN IN AREA -->
          <div class="d-flex justify-content-xs-center justify-content-md-start col-12 col-sm-6 text-center mt-5">

            <div class="formArea col-xs-12 col-md-4">
              <h4 class="titleForm">Sign-up :</h4>

              <form action="/sign-up" method="POST">
                <div class="form-group">
                  <input name="name" type="text" class="form-control" placeholder="Name">
                </div>
                <div class="form-group">
                  <input name="firstname" type="text" class="form-control" placeholder="FirstName">
                </div>
                <div class="form-group">
                  <input name="email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email">
                </div>
                <div class="form-group">
                  <input name="password" type="password" class="form-control"  placeholder="Password">
                </div>

                <button type="submit" class="btn btn-danger">Confirm</button>
              </form>
            </div>
          </div>

              <!-- Sticky Footer -->
              <footer class="footer d-flex justify-content-center text-center">
                <div class="d-flex justify-content-center">
                  <div class="copyright text-center my-auto">
                    <span>Â© 2019 LaCapsule</span>
                  </div>
                </div>
              </footer>


        </div>

           
      </div>



    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>


